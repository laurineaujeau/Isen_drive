extends layout

block content
    hr
    form(method='POST' action='')
        div.form-group
            p Nom: #{product.name}

        div.form-group
            label(for='category') Rayon:
            select#category.form-control(name='category' required='true')
                for category in categories
                    if category === categorie
                        option(value=category._id selected) #{category.name}
                    else
                        option(value=category._id) #{category.name}

        div.form-group
            label(for='price') Prix:
            input#price.form-control(type='number' name='price' required='true' step='.01' value=product.price)

        div.form-group
            label(for='description') Description:
            textarea#description.form-control(name='description' rows=5 required='true') #{product.description}



        div.form-group
            label Tags:
            br
            div(style='display: inline; padding-right:10px;')
                input.checkbox-input(type='checkbox', name='tag', id="1", value="1")
                label(for="1") Bio

            div(style='display: inline; padding-right:10px;')
                input.checkbox-input(type='checkbox', name='tag', id="2", value="2")
                label(for="1") Promo

            div(style='display: inline; padding-right:10px;')
                input.checkbox-input(type='checkbox', name='tag', id="3", value="3")
                label(for="1") Nouveau

        button.btn.btn-primary(type='submit') Valider